                            text: ` Vui lòng đăng nhập với quyền khách hàng!`,
                            icon: 'warning',
                            showConfirmButton: false,
                            timer: 1500,
                        });
                        return false; // Ngừng thực hiện nếu người dùng chưa đăng nhập
                    }
                    const eventDate = '@events.EventDate.Value.ToString("yyyy-MM-dd")'; // Ngày sự kiện từ server

                    // So sánh EventDate với ngày hiện tại
                    const currentDate = new Date().toISOString().split('T')[0]; // Ngày hiện tại theo định dạng 'yyyy-MM-dd'

                    if (eventDate < currentDate) {
                        // Nếu sự kiện đã hết hạn, hiển thị thông báo
                        Swal.fire({
                            title: 'Sự kiện này đã hết hạn',
                            text: 'Nếu bạn muốn tiếp tục đặt vé vui lòng bấm đồng ý!',
                            icon: 'warning',
                            confirmButtonText: 'Đồng ý',
                            showCancelButton: true,
                            cancelButtonText: 'Hủy',
                            customClass: {
                                confirmButton: 'swal-confirm-button', // Nút đăng nhập
                                cancelButton: 'swal-cancel-button'   // Nút hủy
                            },
                        }).then((result) => {
                            if (result.isConfirmed) {
                                window.location.href = '/Service/OrderTicket'; // Chuyển hướng đến trang đăng nhập
                            }
                        });
                        return false; // Ngừng thực hiện nếu sự kiện đã hết hạn
                    }

                    // Kiểm tra nếu người dùng đã tham gia sự kiện khác
                    if (savedDate && savedTime) {
                        const eventName = '@events.EventName'; // Lấy tên sự kiện từ server
                        Swal.fire({
                            title: 'Lưu ý!',
                            text: ` Vui lòng hoàn thành cho sự kiện trước đó để tiếp tục!`,
                            icon: 'warning',
                            showConfirmButton: false,
                            timer: 1500,

                        });
                        return false; // Ngừng thực hiện nếu người dùng đã tham gia sự kiện khác
                    }

                    if (savedDate && savedTime) {
                        // Nếu đã có ngày và giờ, sử dụng giá trị đã lưu
                        document.getElementById('hidden-date-' + ticketId).value = `${savedDate} ${savedTime}`;
                        // Chuyển hướng đến trang Đặt Vé
                        window.location.href = '/Service/OrderTicket';
                        return true;
                    } else {
                        // Hiển thị popup để chọn ngày và giờ nếu chưa có dữ liệu đã lưu
                        Swal.fire({
                            title: 'Chọn ngày và giờ sử dụng',
                            html: (() => {
                                const now = new Date();
                                const currentDate = now.toISOString().split('T')[0]; // Định dạng ngày 'yyyy-MM-dd'

                                // Lấy thông tin EventDate và thời gian (StartTime, EndTime) từ server
                                const eventDate = '@events.EventDate.Value.ToString("yyyy-MM-dd")'; // Ví dụ: 2024-12-31
                                const startTime = '@events.StartTime'; // Ví dụ: 09:00
                                const endTime = '@events.EndTime'; // Ví dụ: 18:00
                                const [hour, minute] = startTime.split(':'); // Tách giờ và phút
                                const startDateTime = new Date();
                                startDateTime.setHours(hour, minute); // Gán giờ và phút từ startTime
                                startDateTime.setMinutes(startDateTime.getMinutes() + 1); // Cộng 1 phút

                                // Chuyển đổi lại thời gian mới (sau khi cộng 1 phút)
                                const newStartTime = startDateTime.toTimeString().slice(0, 5);
                                return `
                                                        <input type="date" id="usage-date" class="swal2-input" value="${eventDate}" min="${eventDate}">
                                                                        <input type="time" id="usage-time" class="swal2-input" value="${newStartTime}" min="${startTime}" max="${endTime}">
                                                    `;
                            })(),
                            showCancelButton: true,
                            confirmButtonText: 'Xác nhận',
                            cancelButtonText: 'Hủy',
                            customClass: {
                                confirmButton: 'swal-confirm-button',
                                cancelButton: 'swal-cancel-button'
                            },
                            preConfirm: () => {
                                const date = document.getElementById('usage-date').value;
                                const time = document.getElementById('usage-time').value;
                                const now = new Date();
                                const currentDate = now.toISOString().split('T')[0];
                                const currentTime = now.toTimeString().split(':').slice(0, 2).join(':'); // Thời gian hiện tại
                                const startTime = '@events.StartTime'; // Ví dụ: 09:00
                                const endTime = '@events.EndTime'; // Ví dụ: 18:00
                                // Kiểm tra tính hợp lệ của ngày và giờ
                                if (!date || !time) {
                                    Swal.showValidationMessage('Bạn cần nhập cả ngày và giờ sử dụng!');
                                    return false;
                                }

                                const enteredDateTime = new Date(date + 'T' + time); // Kết hợp ngày và giờ
                                const currentDateTime = new Date(currentDate + 'T' + currentTime); // Ngày và giờ hiện tại

                                if (enteredDateTime < currentDateTime) {
                                    Swal.showValidationMessage('Ngày và thời gian sử dụng phải lớn hơn hoặc bằng ngày hiện tại!');
                                    return false;
                                }
                                const startDateTime = new Date(date + 'T' + startTime); // Kết hợp ngày đã chọn với StartTime
                                const endDateTime = new Date(date + 'T' + endTime); // Kết hợp ngày đã chọn với EndTime

                                if (enteredDateTime <= startDateTime || enteredDateTime >= endDateTime) {
                                    Swal.showValidationMessage(`Thời gian sử dụng phải trong khoảng từ ${startTime} đến ${endTime}!`);
                                    return false;
                                }
                                return { date, time }; // Trả về ngày và giờ đã chọn
                            }
                        }).then((result) => {
                            if (result.isConfirmed) {
                                const { date, time } = result.value;
                                sessionStorage.setItem('usageDateForAll', date);
                                sessionStorage.setItem('usageTimeForAll', time);

                                // Lưu ngày và giờ vào input ẩn
                                document.getElementById('hidden-date-' + ticketId).value = `${date} ${time}`;

                                // Chuyển hướng đến trang Đặt Vé
                                window.location.href = '/Service/OrderTicket';
                                return true;
                            }
                        });
                    }
                    return false; // Ngừng thực hiện nếu không có trường hợp nào được xử lý
                }
