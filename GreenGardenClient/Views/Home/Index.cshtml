                                </style>

                                <script>
                                    // Lấy tất cả các nút có class 'btn'
                                    document.querySelectorAll('a.btn').forEach(btn => {
                                        let interval; // Biến để lưu hiệu ứng tự động
                                        let scaleUp = true; // Cờ để kiểm soát trạng thái phóng to/thu nhỏ

                                        // Bắt đầu hiệu ứng tự động "nổi rồi không nổi"
                                        const startAutoEffect = () => {
                                            interval = setInterval(() => {
                                                btn.style.transform = scaleUp ? 'scale(1.1)' : 'scale(1)';
                                                scaleUp = !scaleUp;
                                            }, 450); // Chu kỳ hiệu ứng mỗi 150ms
                                        };

                                        // Dừng hiệu ứng tự động
                                        const stopAutoEffect = () => {
                                            clearInterval(interval);
                                            btn.style.transform = 'scale(1.1)'; // Giữ trạng thái "nổi"
                                        };

                                        // Bắt đầu hiệu ứng tự động khi tải trang
                                        startAutoEffect();

                                        // Khi di chuột vào, dừng hiệu ứng tự động và giữ trạng thái "nổi"
                                        btn.addEventListener('mouseover', stopAutoEffect);

                                        // Khi chuột rời khỏi nút, tiếp tục hiệu ứng tự động
                                        btn.addEventListener('mouseout', startAutoEffect);
                                    });
