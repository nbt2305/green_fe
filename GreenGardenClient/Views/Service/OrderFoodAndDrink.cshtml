        function setUsageDate(itemId) {
            const savedDate = sessionStorage.getItem('usageDateForAll');
            const savedTime = sessionStorage.getItem('usageTimeForAll');
            var userId = '@HttpContextAccessor.HttpContext.Session.GetInt32("UserId")'; // hoặc nếu có thể null thì chuyển qua check null
            if (!userId) {
                Swal.fire({
                    title: 'Bạn cần đăng nhập để tiếp tục!',
                    icon: 'warning',
                    confirmButtonText: 'Đăng nhập',
                    showCancelButton: true,
                    cancelButtonText: 'Hủy',
                    customClass: {
                        confirmButton: 'swal-confirm-button', // Nút đăng nhập
                        cancelButton: 'swal-cancel-button'  // Nút hủy
                    },
                    // Sử dụng hàm xử lý khi bấm vào nút
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Khi bấm vào nút "Đăng nhập", chuyển hướng tới trang đăng nhập
                        window.location.href = '/Common/Login';  // Địa chỉ trang đăng nhập của bạn
                    }
                });
                return false; // Ngừng thực hiện hành động
            }
            if (savedDate && savedTime) {
                // Use the saved date and time if they exist
                document.getElementById('hidden-date-' + itemId).value = `${savedDate} ${savedTime}`;
                addToCart(itemId); // Call addToCart function directly
            } else {
                addToCart(itemId);
                // Show the popup to select both date and time if not previously saved
            }
            return false;
        }
        function updateCartCount() {
            $.get('/Service/GetCartItemCount', function (count) {
                if (count !== null && count > 0) {
                    // Kiểm tra nếu badge chưa tồn tại, thêm badge mới
                    if (!$('.cart-badge').length) {
                        $('.cart-wrapper').append(`<span class="cart-badge">${count}</span>`);
                    } else {
                        // Nếu badge đã tồn tại, cập nhật số lượng
                        $('.cart-badge').text(count);
                    }
                } else {
                    // Nếu giỏ hàng trống, hiển thị 0
                    if (!$('.cart-badge').length) {
                        $('.cart-wrapper').append(`<span class="cart-badge">0</span>`);
                    } else {
                        $('.cart-badge').text('0');
                    }
                }
            });
        }
        function addToCart(itemId) {
            const form = $(`#product-${itemId}`).find('form');
            const formData = form.serialize();

            $.ajax({
                type: "POST",
                url: form.attr("action"),
                data: formData,
                success: function (response) {
                    if (response.success) {
                        // Nếu thêm vào giỏ hàng thành công
                        Swal.fire({
                            icon: "success",
                            title: "Thành công",
                            text: response.message,
                            showConfirmButton: false,
                            timer: 1500
                        });
                        updateCartCount();
                    } else {
                        // Nếu có lỗi (chưa đăng nhập hoặc sai vai trò)
                        Swal.fire({
                            icon: "warning",
                            title: "Thất bại",
                            text: response.message,
                            showConfirmButton: false,
                            timer: 1500
                        });
                    }
                },
                error: function () {
                    // Xử lý lỗi khi gọi AJAX thất bại
                    Swal.fire({
                        icon: "error",
                        title: "Lỗi",
                        text: "Đã có lỗi xảy ra, vui lòng thử lại.",
                        showConfirmButton: false,
                        timer: 1500
                    });
                }
            });
        }



    </script>
