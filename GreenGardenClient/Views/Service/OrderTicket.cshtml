                                    <a href="~/DashBoard" class="nav-link">
                                        <i class="fas fa-tachometer-alt"></i> Quản lí
                                    </a>

                                    <a href="~/Home/Logout" class="nav-link">
                                        <i class="fas fa-sign-out-alt"></i> Đăng xuất
                                    </a>

                                }
                                else if (HttpContextAccessor.HttpContext.Session.GetInt32("RoleId") == 2)
                                {

                                    <a href="~/OrderManagement/OrderOnline" class="nav-link">
                                        <i class="fas fa-box"></i> Quản lí
                                    </a>

                                    <a href="~/Home/Logout" class="nav-link">
                                        <i class="fas fa-sign-out-alt"></i> Đăng xuất
                                    </a>

                                }
                                else
                                {

                                    <a href="~/Service/OrderHistory" class="nav-link">
                                        <i class="fas fa-history"></i> Lịch sử đặt hàng
                                    </a>

                                    <a href="~/Service/Cart" class="nav-link">
                                        <i class="fas fa-shopping-cart"></i> Giỏ hàng
                                    </a>

                                    <a href="~/Home/Logout" class="nav-link">
                                        <i class="fas fa-sign-out-alt"></i> Đăng xuất
                                    </a>

                                }
                            </ul>
                        }

                        <!-- Shopping cart icon -->
