                        {
                            <a href="/Common/Login" class="nav-link">
                                <i class="fas fa-sign-in-alt"></i> Đăng nhập
                            </a>
                            <a href="/Common/Register" class="nav-link">
                                <i class="fas fa-user-plus"></i> Đăng Ký
                            </a>
                        }
                        else
                        {
                            <!-- User authenticated, show profile and user-specific links -->
                            <a href="~/Common/UpdateProfile" class="nav-link" style="display: flex; align-items: center;">
                                @if (@HttpContextAccessor.HttpContext.Session.GetString("Img") == null)
                                {
                                    <div style="width: 30px; height: 30px; border-radius: 50%; overflow: hidden; margin-right: 8px;">
                                        <img src="~/images/p22.jpg" alt="Trang cá nhân" style="width: 100%; height: 100%; object-fit: cover;">
                                    </div>
                                }
                                else
                                {
                                    <div style="width: 30px; height: 30px; border-radius: 50%; overflow: hidden; margin-right: 8px;">
                                        <img src="@HttpContextAccessor.HttpContext.Session.GetString("Img")" alt="Trang cá nhân" style="width: 100%; height: 100%; object-fit: cover;">
                                    </div>
                                }
                                <i class="fas fa-user"></i> @HttpContextAccessor.HttpContext.Session.GetString("Fullname")
                            </a>

                            <ul>
                                <!-- User role-based links with icons -->
