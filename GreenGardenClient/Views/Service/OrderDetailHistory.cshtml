        <script>
            $(document).ready(function () {
                // Toggle mobile menu visibility
                $('.js-menu-toggle').on('click', function (e) {
                    e.preventDefault();
                    $('body').toggleClass('offcanvas-menu');
                });

                // Close the menu when clicking the close button
                $('.site-mobile-menu-close').on('click', function () {
                    $('body').removeClass('offcanvas-menu');
                });

                // Close the menu when clicking outside of it
                $(document).mouseup(function (e) {
                    var container = $(".site-mobile-menu");
                    if (!container.is(e.target) && container.has(e.target).length === 0) {
                        $('body').removeClass('offcanvas-menu');
                    }
                });

                // Set the active class based on the current URL
                var currentUrl = window.location.pathname; // Get the current URL path
                $('.site-menu a').each(function () {
                    if ($(this).attr('href') === currentUrl || (currentUrl === '/' && $(this).attr('href') === '/Home')) {
                        $('.site-menu a').removeClass('active'); // Remove active from all links
                        $(this).addClass('active'); // Add active to the matching link
                    }
                });

                // Ensure menu is hidden when resizing to desktop
                $(window).resize(function () {
                    if ($(window).width() > 991.98) { // Bootstrap lg breakpoint
                        $('body').removeClass('offcanvas-menu'); // Reset menu state
                    }
                });
            });


