                                        <script>
                                            // Function to validate deposit amount before submitting
                                            function validateDepositAmount(orderId, totalAmount) {
                                                const depositAmountInput = document.getElementById(`depositAmount-${orderId}`);
                                                const depositAmount = parseFloat(depositAmountInput.value);

                                                // Check if the deposit amount is valid and not greater than totalAmount
                                                if (isNaN(depositAmount) || depositAmount <= 0) {
                                                    alert("Số tiền đặt cọc phải lớn hơn 0. Vui lòng nhập số tiền hợp lệ.");
                                                    return false; // Prevent form submission
                                                }

                                                if (depositAmount > totalAmount) {
                                                    alert("Số tiền đặt cọc không được vượt quá tổng số tiền.");
                                                    return false; // Prevent form submission
                                                }

                                                return true; // Allow form submission
                                            }

