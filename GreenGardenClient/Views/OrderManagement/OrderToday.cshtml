                                                // Lấy giá trị ô input
                                                const depositAmountInput = document.getElementById(`depositAmount-${orderId}`);

                                                // Cập nhật giá trị trong ô input
                                                depositAmountInput.value = parseInt(deposit.replace(/\D/g, ''));
